<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sejarah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.id.sejarahislamindonesia.sejarah">

    <Button
        android:text="  Tahapan Masuknya Islam"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tahapan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="161dp" />

    <Button
        android:text="     Proses Penyebarann  "
        android:background="@android:color/background_light"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proses"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_above="@+id/teori"
        android:layout_alignLeft="@+id/tahapan"
        android:layout_alignStart="@+id/tahapan"
        android:layout_marginBottom="23dp" />

    <Button
        android:text="  Teori Masuknya Islam"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teori"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/tahapan"
        android:layout_alignLeft="@+id/proses"
        android:layout_alignStart="@+id/proses" />
</RelativeLayout>
